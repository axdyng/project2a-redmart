<%= form_for(@review, url: product_path(@product.id)) do |f| %>
  <%= render 'partials/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Review this product..." %>
    <%= f.hidden_field :product_id, value: @product.id %>
  </div>
  <%= f.submit "Review product", class: "btn btn-primary" %>
<% end %>
