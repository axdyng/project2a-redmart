<%= provide(:heading, 'Your reviews') %>
<em>
  <strong>Winter is coming at:</strong>
  <%= Time.now %>
</em>

<div class="row review-row">
  <!-- top sector -->
  <!-- <div class="col-md-4 col-md-offset-3 profile-image" style="background-image: url('https://upload.wikimedia.org/wikipedia/en/3/34/Eddard_Stark.jpg')">
  </div> -->
  <div class="col-md-4 profile-image">
    <img src="https://upload.wikimedia.org/wikipedia/en/3/34/Eddard_Stark.jpg" alt="Profile photo" />
  </div>
  <% @name = @user.email.split('@') %>
  <!-- bottom sector -->
  <div class="col-md-12 review-col">
    <% if @user.reviews.any? %>
      <h4>Total reviews: <%= @user.reviews.count %></h4>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
      <%= will_paginate @reviews %>
    <% end %>
  </div>
</div>
