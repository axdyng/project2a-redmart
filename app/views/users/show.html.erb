<%= provide(:heading, 'Your reviews') %>
<em>
  <strong>Logged in at:</strong>
  <%= Time.now %>
</em>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3>
        <%= @user.email %>
      </h3>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.reviews.any? %>
      <h3>Total reviews: <%= @user.reviews.count %></h3>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
      <%= will_paginate @reviews %>
    <% end %>
  </div>
</div>
